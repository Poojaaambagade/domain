<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddExamQuestionActivity">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question"
            android:padding="10sp"
            android:background="@drawable/custom_input"/>

        <EditText
            android:id="@+id/etOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_input"
            android:hint="Option 1" />

        <EditText
            android:id="@+id/etOption2"
            android:layout_width="match_parent"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:hint="Option 2" />

        <EditText
            android:id="@+id/etOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_input"
            android:hint="Option 3" />

        <EditText
            android:id="@+id/etCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_input"
            android:hint="Correct Answer (e.g., Option 1)" />

        <Button
            android:id="@+id/btnSaveQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/custom_input"
            android:text="Save Question" />
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="150dp"
            android:padding="10sp"
            android:background="@drawable/custom_input"
            android:layout_gravity="start" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
